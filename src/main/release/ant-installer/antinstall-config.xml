	<page
			type		="input"
			name		="searchOptions"
			displayText	="iBus-Kommunikations Parameter des Searcher's"
			target		="communicationSearch">
			
			<text property="searchClientName" displayText="Client Name:" defaultValue="/ingrid-group:iplug-se-search-'Ihr-Name'"/>
			<text property="searchServerName" displayText="Server Name:" defaultValue="/kug-group:kug-ibus"/>
			<text property="searchServerIp"   displayText="Server IP:"   defaultValue="192.168.64.117"/>
			<text property="searchServerPort" displayText="Server Port:" defaultValue="80"/>
			
			<comment displayText="" explanatoryText="Der Client-Name muss eindeutig sein, da es sonst zu Kommunikationsproblemen zum iBus fuehren kann."/>
			<comment displayText="" explanatoryText="Die Server-IP ist die Adresse des Rechners, auf dem der iBus ueber dem Server-Port angesprochen werden kann."/>
	</page>
    -->
    
    <page
            type        ="input"
            name        ="adminOptions"
            displayText ="Ports für die Administration von Indexer und Searcher"
            target      ="portSettings">

            <comment displayText="" explanatoryText="Eingabe der Ports über die die Adminoberflächen des Indexer und Searcher erreichbar sein soll."/>
            
            <text property="adminIndexPort"  displayText="Port für Indexer:"  defaultValue="50060"/>
            <text property="adminSearchPort" displayText="Port für Searcher:" defaultValue="50059"/>
            
    </page>
	
    <page
            type        ="input"
            name        ="mysqlOptions"
            displayText ="MySQL - Parameter für die URL-Pflege"
            target      ="mysqlSettings">

            <comment displayText="" explanatoryText="An access to a MySQL database is needed where a database with the name 'iplugse' must exist! This is where the URLs are stored."/>
            
            <text property="mysqlJdbcUrl"  displayText="MySQL JDBC-Url:"     defaultValue="jdbc:mysql://192.168.64.117/iplugse"/>
            <text property="mysqlUserName" displayText="MySQL Benutzername:" defaultValue="root"/>
            <text property="mysqlPassword" displayText="MySQL Passwort:"     defaultValue=""/>
            
    </page>
    
	<page
			type		="input"
			name		="properties"
			displayText	="Benötigte Installationsoptionen">
		<directory
				property		="installDir"
				defaultValue	="/opt/ingrid/${project.artifactId}-${project.version}"
				defaultValueWin	="${env.ProgramFiles}\${project.artifactId}-${project.version}"
				displayText		="Installationsverzeichnis"
				create			="true"/>
	</page>

	<page
			type		="progress"
			name		="progress"
			displayText	="Installationsfortschritt"
			showTargets	="true"
			target		="showInstallNotes">
	</page>
</installer>


