<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="hsql-mem" transaction-type="RESOURCE_LOCAL">
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Url</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.CatalogUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.StartUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.LimitUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.ExcludeUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Partner</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Provider</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Metadata</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Crawl</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:./test"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="eclipselink.target-database" value="HSQL"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.orm.throw.exceptions" value="true"/>
			<property name="eclipselink.weaving" value="false"/>

            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
			<property name="eclipselink.cache.expiry" value="60000"/>
        </properties>
    </persistence-unit>

	<persistence-unit name="hsql" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Url</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.CatalogUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.StartUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.LimitUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.ExcludeUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Partner</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Provider</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Metadata</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Crawl</class>
		
		<properties>
			<property name="eclipselink.target-database" value="HSQL"/>
      		<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      		<property name="eclipselink.ddl-generation.output-mode" value="database"/>
			<property name="eclipselink.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
			<property name="eclipselink.jdbc.user" value="sa"/>
			<property name="eclipselink.jdbc.password" value=""/>
			<property name="eclipselink.weaving" value="false"/>
			<property name="eclipselink.jdbc.url" value="jdbc:hsqldb:."/>
			<property name="eclipselink.cache.expiry" value="60000"/>
		</properties>
	</persistence-unit>

	<persistence-unit name="mysql" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Url</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.UrlLog</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.CatalogUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.StartUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.LimitUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.ExcludeUrl</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Partner</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Provider</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Metadata</class>
		<class>de.ingrid.iplug.se.urlmaintenance.persistence.model.Crawl</class>

		<properties>
			<property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="eclipselink.jdbc.user" value="@MYSQL_USERNAME@" />
			<property name="eclipselink.jdbc.password" value="@MYSQL_PASSWORD@" />
			<property name="eclipselink.jdbc.url" value="@MYSQL_JDBC_URL@" />
			<property name="eclipselink.ddl-generation" value="create-tables"/>
      		<property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <property name="eclipselink.logging.level" value="WARNING"/>
			<property name="eclipselink.cache.expiry" value="60000"/>
			<property name="eclipselink.cache.shared.default" value="false"/>
		</properties>
	</persistence-unit>

	<!--  Just created persistence-unit to satisfy the jboss hibernate tools -->
    <persistence-unit name="HibernateToolsPersistency">  
    </persistence-unit>  

</persistence> 