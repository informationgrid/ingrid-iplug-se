<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE installer PUBLIC "-//tp23 //DTD Ant Installer Config//EN" "http://antinstaller.sf.net/dtd/antinstall-config-0.8.dtd">
<installer
			ui                   ="swing,text,swing-auto,text-auto"
      		loadDefaults         ="prompt"
			verbose              ="true"
			debug                ="true"
			lookAndFeel          ="org.tp23.jgoodies.plaf.plastic.PlasticXPLookAndFeel"
			name                 ="iPlug-SE Installation"
			windowIcon	         ="/resources/icons/logoIcon.gif"
			defaultImageResource ="/resources/makewavesdawn.png"
			minJavaVersion       ="1.6"
      		version              ="1.0">
			
	<page
			type		="input"
			name		="intro"
			displayText	="Willkommen zur iPlug-SE Installation"
			target		="install">
		<comment displayText="" bold="true" explanatoryText="Dieser Assistent hilft Ihnen bei der Installation sowie Konfiguration des iPlugs."/>
      	<comment displayText="Hinweis: " bold="true"/>
		<comment displayText="" explanatoryText="Wenn dies ein Update ist, dann können die Einstellungen der vorherigen Installation verwendet werden. Dazu muss sich die Datei 'ant.install.properties' im gleichen Verzeichnis wie der Installer befinden. Es empfiehlt sich daher, die Updates immer vom gleichen Verzeichnis auszuführen."/>
	</page>

	<page
			type		="input"
			name		="indexOptions"
			displayText	="iBus-Kommunikations-Parameter"
			target		="communicationIndex">

            <comment displayText="" explanatoryText="Der Client-Name muss eindeutig sein, da es sonst zu Kommunikationsproblemen zum iBus fuehren kann."/>
            <comment displayText="" explanatoryText="Die Server-IP ist die Adresse des Rechners, auf dem der iBus ueber dem Server-Port angesprochen werden kann."/>			
			
            <text property="indexClientName" displayText="Client Name:" defaultValue="/ingrid-group:iplug-se-'Ihr-Name'"/>
			<text property="indexServerName" displayText="Server Name:" defaultValue="/kug-group:kug-ibus"/>
			<text property="indexServerIp"   displayText="Server IP:"   defaultValue="192.168.64.117"/>
			<text property="indexServerPort" displayText="Server Port:" defaultValue="80"/>
			
	</page>

