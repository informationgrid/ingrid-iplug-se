<?xml version="1.0" encoding="utf-8"?>
<assembly>
  <id>installer</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/release/ant-installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>target/installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <!-- Take the finished distribution as build by ant scripts for copy -->
    <fileSet>
      <directory>build/dist/ingrid-iplug-se</directory>
      <outputDirectory>${project.artifactId}-${project.version}</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
