<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>ingrid-base-pom</artifactId>
		<groupId>de.ingrid</groupId>
		<version>1.0.1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.ingrid</groupId>
	<artifactId>ingrid-iplug-se</artifactId>
	<packaging>jar</packaging>
	<version>1.2-SNAPSHOT</version>
	<name>ingrid-iplug</name>
	<scm>
		<connection>scm:svn:https://harrison.its-technidata.de:444/svn/ingrid/ingrid-iplug-se/branches/branch-1.2</connection>
		<developerConnection>scm:svn:https://harrison.its-technidata.de:444/svn/ingrid/ingrid-iplug-se/branches/branch-1.2</developerConnection>
	</scm>
	<dependencies>
		<dependency>
			<groupId>nutch</groupId>
			<artifactId>nutch</artifactId>
			<version>0.8-dev</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>nutch</groupId>
			<artifactId>hadoop</artifactId>
			<version>0.1-dev</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>de.ingrid</groupId>
			<artifactId>ingrid-iplug</artifactId>
		</dependency>
		<dependency>
			<groupId>de.ingrid</groupId>
			<artifactId>ingrid-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>1.9-rc1-dev</version>
		</dependency>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-misc</artifactId>
			<version>1.9-rc1-dev</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>de.ingrid.m2</id>
			<name>Maven2 Repo InGrid</name>
			<url>http://harrison.its-technidata.de/archiva/repository/ingrid-all</url>
		</repository>
	</repositories>
	<build>
		<finalName>${project.artifactId}-${project.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<forkMode>always</forkMode>
					<redirectTestOutputToFile>true</redirectTestOutputToFile>
					<includes>
						<include>**/*Test.java</include>
					</includes>
					<excludes>
						<exclude>**/v01/*</exclude>
						<exclude>**/v05/*</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>