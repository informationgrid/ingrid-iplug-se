                                <source>apache-nutch-1.8/src/plugin/urlmeta/src/test</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-basic/src/java</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-basic/src/test</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-host/src/java</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-host/src/test</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-pass/src/java</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-pass/src/test</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-querystring/src/java</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-querystring/src/test</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-regex/src/java</source>
                                <source>apache-nutch-1.8/src/plugin/urlnormalizer-regex/src/test</source>

                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/ingrid-nutch/**</exclude>
                        <exclude>**/ingrid-nutch-search/**</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <!-- Get and put all dependencies into special folder -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>ingrid-nutch-common/ingrid-ext</outputDirectory>
                            <excludeTransitive>false</excludeTransitive>
                            <excludeArtifactIds>ingrid-installer</excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Build the plugin via ant build scripts -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <echo>${java.home}</echo>
                                <echo
                                    message="Executing original ant build script '${basedir}/build.xml' target=dist." />
                                <ant antfile="${basedir}/build.xml" inheritRefs="true">
                                    <property name="maven.version" value="${version}" />
                                    <property name="maven.buildNumber" value="${buildNumber}" />
                                    <property name="maven.timestamp" value="${timestamp}" />
                                    <property name="maven.iplugType" value="IPLUG_SE" />
                                    <property name="ingrid-base-webapp.version" value="${ingrid-base-webapp.version}" />
                                    <target name="dist" />
                                </ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <!-- following is needed since this plugin mixes up the JAVA_HOME directory 
                        a bit -->
                    <dependency>
                        <groupId>com.sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>1.6.0</version>
                        <scope>system</scope>
                        <systemPath>${java.home}/../lib/tools.jar</systemPath>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <!-- one of these: IPLUG_SE, IPLUG_DSC, IPLUG_SNS, IPLUG_TAMINO, IPLUG_FPN, 
                                IPLUG_G2K, IPLUG_CSW, IPLUG_CSW_DSC, OTHER see ingrid-utils:de.ingrid.utils.metadata.IPlugType -->
                            <iPlug-Type>IPLUG_SE</iPlug-Type>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <ingridComponentType>IPLUG_SE</ingridComponentType>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
